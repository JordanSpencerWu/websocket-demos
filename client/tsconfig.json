{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "moduleResolution": "node",
    "paths": {
      "components/*": ["components/*"]
    },
    "lib": ["es2019", "dom"],
  },
  "include": ["src"]
}
